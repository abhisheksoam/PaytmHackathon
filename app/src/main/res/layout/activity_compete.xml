<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.example.vikalp.hackathon.activity.Compete">


        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_light"
            android:text="Select Your Sport"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/badminton"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Badminton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="19dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tennis"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/table_tennis"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Tennis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="19dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/squash"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/squash"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Squash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/chess"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/chess"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Chess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="19dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lawn"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/lawn_tennis"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Lawn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            android:textColor="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="We will be adding more sports for you soon..."
            />


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>